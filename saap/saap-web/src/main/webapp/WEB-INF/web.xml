	<!-- 
		《登录信息线程注入过滤器》
	1、对于所有的Action，通过过滤器将登陆操作员信息绑定到ThreadLocal
	2、后台如操作日志拦截器、Service层可通过SecurityContextHolder取到当前线程的登陆操作员信息
	
	 -->
	<filter>
		<filter-name>operatorHttpSessionContextIntegrationFilter</filter-name>
		<filter-class>
			com.litt.core.shield.web.filter.OperatorHttpSessionContextIntegrationFilter
		</filter-class>
		<init-param>
			<param-name>sessionLoginObjName</param-name>
			<param-value>SESSION_OPER</param-value>
		</init-param>	
		<init-param>
			<param-name>excludeUrlPattern</param-name>
			<param-value>/index,/login</param-value>
		</init-param>		
		<init-param>
			<param-name>failRedirect</param-name>
			<param-value>/</param-value>
		</init-param>	
	</filter>
	<filter-mapping>
		<filter-name>operatorHttpSessionContextIntegrationFilter</filter-name>
		<url-pattern>*.jsp</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>operatorHttpSessionContextIntegrationFilter</filter-name>
		<url-pattern>*.do</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>operatorHttpSessionContextIntegrationFilter</filter-name>
		<url-pattern>*.json</url-pattern>
	</filter-mapping>		
	
	<!-- Character Encoding filter -->
	<filter>
		<filter-name>encodingFilter</filter-name>
		<filter-class>
			org.springframework.web.filter.CharacterEncodingFilter
		</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
		<init-param>
			<param-name>forceEncoding</param-name>
			<param-value>false</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>encodingFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>	
	
	<servlet>
		<servlet-name>dispatcher</servlet-name>
		<servlet-class>
			org.springframework.web.servlet.DispatcherServlet
		</servlet-class>
		<init-param>
			<param-name>contextConfigLocation</param-name>
			<param-value>
				/WEB-INF/applicationContext-servlet.xml
			</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>dispatcher</servlet-name>
		<url-pattern>/</url-pattern>
	</servlet-mapping>	
	
	<!-- Sitemesh 过滤器 -->
	<filter>
	    <filter-name>sitemesh</filter-name>
	    <filter-class>com.opensymphony.sitemesh.webapp.SiteMeshFilter</filter-class>
	    <init-param>
		    <param-name>debug.pagewriter</param-name>
		    <param-value>true</param-value>
		</init-param>	    
	</filter>
	<filter-mapping>
	    <filter-name>sitemesh</filter-name>
	    <url-pattern>*.jsp</url-pattern>
	    <dispatcher>FORWARD</dispatcher>
        <dispatcher>REQUEST</dispatcher> 
        <dispatcher>ERROR</dispatcher> 
	</filter-mapping>
	

	<!-- 登录认证码 -->  
	<servlet>
		<servlet-name>opLoginCaptchaServlet</servlet-name>
		<servlet-class>com.litt.core.web.servlet.LoginCaptchaServlet</servlet-class>
	</servlet>  
	<servlet-mapping>
		<servlet-name>opLoginCaptchaServlet</servlet-name>
		<url-pattern>/opCaptcha</url-pattern>
	</servlet-mapping>	

	<!-- SESSION超时（分钟） -->
	<session-config>
		<session-timeout>30</session-timeout>
	</session-config>

	
	<!-- 500异常页面配置 -->
	<error-page>
		<error-code>500</error-code>
		<location>/error.jsp</location>		
	</error-page>
	
	<!-- 400异常页面配置 -->
	<error-page>		
		<error-code>404</error-code>
		<location>/404.jsp</location>
	</error-page>
	
	<welcome-file-list>
		<welcome-file>index.do</welcome-file>
	    <welcome-file>index.htm</welcome-file>
	    <welcome-file>index.html</welcome-file>	    
	    <welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
	
	<!-- Fontawesome -->
	<mime-mapping>
	    <extension>woff</extension>
	    <mime-type>application/x-font-woff</mime-type>
	</mime-mapping>	
	<mime-mapping>
	    <extension>ttf</extension>
	    <mime-type>application/octet-stream</mime-type>
	</mime-mapping>	
	<mime-mapping>
	    <extension>otf</extension>
	    <mime-type>application/octet-stream</mime-type>
	</mime-mapping>
	
	<jsp-config>
		<taglib>
			<taglib-uri>http://www.littcore.com/core</taglib-uri>
			<taglib-location>/WEB-INF/tlds/litt-el.tld</taglib-location>
		</taglib>		
		
		<jsp-property-group>			
			<display-name>JSPConfiguration</display-name>
			<url-pattern>*.inc</url-pattern>
			<el-ignored>false</el-ignored>
			<page-encoding>UTF-8</page-encoding>
			<scripting-invalid>false</scripting-invalid>
			<include-prelude />
			<include-coda />
		</jsp-property-group>
	</jsp-config>
</web-app>